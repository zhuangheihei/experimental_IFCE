<% include ../partials/zh-header %>

<div class = "container">
    <div class="row">
        <h2>编辑项目</h2>
        <div >
            <form action="/zh/programs/<%= program._id %>?_method=PUT" method = "post">
                <!--用form-group加入spacing-->
                <div class="form-group" style = "width: 70%;" >
                    <input class = "form-control" type = "text" name = "program[title]" value = "<%= program.title %>" required>
                </div>
                <div class="form-group" style = "width: 30%;">
                    <input class="form-control" type="date" name="program[date]"  value="<%= program.date %>" required>
                </div>
                <div class = "form-group" style = "width: 30%">
                    <select class = "form-control" name = "program[category]" value="<%= program.category %>" required>
                        <option value="">请选择一个项目分类</option>
                        <option value = "政策咨询与建议">政策咨询与建议</option>
                        <option value = "技术交流">技术交流</option>
                        <option value = "中美交流">中美交流</option>
                        <option value = "教育与培训">教育与培训</option>
                        <option value = "会议活动与特别事件">会议活动与特别事件</option>
                        <option value = "媒体报道">媒体报道</option>
                    </select>
                </div>
                <!--Add Summernote Editor-->
                <div class = "form-group">
                   <textarea id="summernote" name="program[body]"><%= program.body %></textarea>
                </div>
                
                <div class="form-group text-right" id = "submit">
                    <button class = "btn btn-lg btn-primary">提交</button>
                </div>
            </form>
            <a href = "/zh/programs" style="float:right">
                <button class = "btn btn-lg btn-secondary">取消</button>
            </a>
        </div>
    </div>
</div>

<!--Script to run summernote-->
<script>
    $(document).ready(function() {
      $('#summernote').summernote({
            placeholder: "hello!",
            tabsize: 2,
            height: 600,
            width: 1100
      });
    });
</script>

    
