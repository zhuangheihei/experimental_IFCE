<% include partials/header %>

<div class = "container">
    <div class="row">
        <h3>Create a new Program</h3>
        <div style = "width: 60%; margin:0, auto">
            <form action="/programs" method = "post">
                <!--用form-group加入spacing-->
                <div class="form-group">
                    <input class = "form-control" type = "text" name = "title" placeholder = "name">
                </div>
                <div class="form-group">
                    <input class = "form-control" type = "text" name = "date" placeholder = "date">
                </div>
                <div class="form-group">
                    <input class = "form-control" type = "textarea" name = "body" placeholder = "article">
                </div>
                <div class="form-group">
                    <button class = "btn btn-lg btn-primary">Submit!</button>
                </div>
            </form>
        </div>
    </div>
    
    <a href = "/programs">Go Back</a>    
</div>

